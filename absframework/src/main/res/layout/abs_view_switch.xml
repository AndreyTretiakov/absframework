<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/absSwitchView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >

    <com.tretiakov.absframework.views.text.AbsTextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/switchView"
        android:textColor="@color/abs_textPrimary"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:text="@android:string/unknownName"
        app:_font="@string/medium"
        />

    <com.tretiakov.absframework.views.text.AbsTextView
        android:id="@android:id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_toStartOf="@+id/switchView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14dp"
        android:textColor="@color/abs_textSecondary"
        android:text="@android:string/unknownName"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@null"
        />

</RelativeLayout>